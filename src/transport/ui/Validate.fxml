    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Carte Personnel" />

    <HBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Enter Fare ID:" />
        <TextField fx:id="idTitre" prefWidth="200" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-border-width: 1;" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="resultLabel" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="User Type:" visible="false" />
    </HBox>

    <!-- Ajout d'une autre ComboBox pour les options de carte qui apparaÃ®tra selon le type d'utilisateur -->
    <HBox alignment="CENTER" spacing="10">
    </HBox>

    <Button fx:id="VerifyBTN" onAction="#verify" style="-fx-font-size: 14; -fx-min-width: 200; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 1);" text="Verify" />

    <Button fx:id="backButton" onAction="#returnToFareManagement" style="-fx-font-size: 14; -fx-min-width: 200; -fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 1);" text="Back" />

